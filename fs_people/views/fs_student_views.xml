<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Student Tree View -->
    <record id="view_fs_student_tree" model="ir.ui.view">
        <field name="name">fs.student.list</field>
        <field name="model">fs.student</field>
        <field name="arch" type="xml">
            <list decoration-danger="has_expired_status" decoration-success="not has_expired_status">
                <field name="has_expired_status" column_invisible="1"/>
                <field name="name"/>
                <field name="rank_id" optional="show"/>
                <field name="license_code" widget="badge" optional="hide"/>
                <field name="license_expiry_status" widget="badge" optional="show" decoration-danger="license_expiry_status == 'expired'" decoration-warning="license_expiry_status == 'expiring'" decoration-success="license_expiry_status == 'valid'" decoration-muted="license_expiry_status == 'no_expiry'"/>
                <field name="medical_status" widget="badge" optional="show" decoration-danger="medical_status == 'expired'" decoration-warning="medical_status == 'expiring'" decoration-success="medical_status == 'valid'" decoration-muted="medical_status == 'no_expiry'"/>
                <field name="security_clearance_status" widget="badge" optional="show" decoration-danger="security_clearance_status == 'expired'" decoration-warning="security_clearance_status == 'expiring'" decoration-success="security_clearance_status == 'valid'" decoration-muted="security_clearance_status == 'no_expiry'"/>
                <field name="insurance_status" widget="badge" optional="show" decoration-danger="insurance_status == 'expired'" decoration-warning="insurance_status == 'expiring'" decoration-success="insurance_status == 'valid'" decoration-muted="insurance_status == 'no_expiry'"/>
                <field name="total_flight_hours" widget="float_time" optional="show"/>
                <field name="solo_hours" widget="float_time" optional="hide"/>
                <field name="advance_payment" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Student Form View -->
    <record id="view_fs_student_form" model="ir.ui.view">
        <field name="name">fs.student.form</field>
        <field name="model">fs.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_user" type="object" 
                            string="Create User Account" 
                            class="btn-primary"
                            invisible="has_user"/>
                    <button name="action_view_user" type="object" 
                            string="View User Account" 
                            invisible="not has_user"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_user" type="object" 
                                class="oe_stat_button" icon="fa-user"
                                invisible="not has_user">
                            <div class="o_stat_info">
                                <span class="o_stat_text">User Account</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'size': [128, 128]}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Full Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="license_id"/>
                            <field name="license_expiry"/>
                            <field name="rank_id" invisible="not is_military"/>
                        </group>
                        <group>
                            <field name="total_flight_hours" widget="float_time"/>
                            <field name="solo_hours" widget="float_time"/>
                            <field name="is_military" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Personal" name="personal">
                            <group>
                                <group string="Personal Information">
                                    <field name="gender" widget="radio"/>
                                    <field name="birth_date"/>
                                    <field name="nationality_id"/>
                                    <field name="identification_number"/>
                                    <field name="phone"/>
                                </group>
                                <group string="Military Information">
                                    <field name="is_military"/>
                                    <field name="rank_id" invisible="not is_military"/>
                                    <field name="service_number" invisible="not is_military"/>
                                </group>
                            </group>
                            <group string="Address">
                                <field name="address" nolabel="1" colspan="2"/>
                            </group>
                        </page>
                        <page string="License" name="license">
                            <group>
                                <group string="License Information">
                                    <field name="license_id"/>
                                    <field name="license_number"/>
                                    <field name="license_issue_date"/>
                                    <label for="license_expiry" string="License Expiry"/>
                                    <div class="o_row">
                                        <field name="license_expiry" nolabel="1" decoration-danger="license_expiry_status == 'expired'" decoration-warning="license_expiry_status == 'expiring'"/>
                                        <field name="license_expiry_status" widget="badge" invisible="license_expiry_status == 'valid'" decoration-danger="license_expiry_status == 'expired'" decoration-warning="license_expiry_status == 'expiring'" decoration-success="license_expiry_status == 'valid'" decoration-muted="license_expiry_status == 'no_expiry'" nolabel="1"/>
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string="Medical" name="medical">
                            <group>
                                <group string="Medical Certificate">
                                    <field name="medical_class_id"/>
                                    <label for="medical_expiry" string="Medical Expiry"/>
                                    <div class="o_row">
                                        <field name="medical_expiry" nolabel="1" decoration-danger="medical_status == 'expired'" decoration-warning="medical_status == 'expiring'"/>
                                        <field name="medical_status" widget="badge" invisible="medical_status == 'valid'" decoration-danger="medical_status == 'expired'" decoration-warning="medical_status == 'expiring'" decoration-success="medical_status == 'valid'" decoration-muted="medical_status == 'no_expiry'" nolabel="1"/>
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string="Civilian Requirements" name="civilian" invisible="is_military">
                            <group>
                                <group string="Clearances &amp; Insurance">
                                    <label for="security_clearance_expiry" string="Security Clearance Expiry"/>
                                    <div class="o_row">
                                        <field name="security_clearance_expiry" nolabel="1" decoration-danger="security_clearance_status == 'expired'" decoration-warning="security_clearance_status == 'expiring'"/>
                                        <field name="security_clearance_status" widget="badge" invisible="security_clearance_status == 'valid'" decoration-danger="security_clearance_status == 'expired'" decoration-warning="security_clearance_status == 'expiring'" decoration-success="security_clearance_status == 'valid'" decoration-muted="security_clearance_status == 'no_expiry'" nolabel="1"/>
                                    </div>
                                    <label for="insurance_expiry" string="Insurance Expiry"/>
                                    <div class="o_row">
                                        <field name="insurance_expiry" nolabel="1" decoration-danger="insurance_status == 'expired'" decoration-warning="insurance_status == 'expiring'"/>
                                        <field name="insurance_status" widget="badge" invisible="insurance_status == 'valid'" decoration-danger="insurance_status == 'expired'" decoration-warning="insurance_status == 'expiring'" decoration-success="insurance_status == 'valid'" decoration-muted="insurance_status == 'no_expiry'" nolabel="1"/>
                                    </div>
                                </group>
                                <group string="Financial">
                                    <field name="advance_payment"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="System" name="system">
                            <group>
                                <group string="System Access">
                                    <field name="user_id"/>
                                    <field name="has_user" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Student Search View -->
    <record id="view_fs_student_search" model="ir.ui.view">
        <field name="name">fs.student.search</field>
        <field name="model">fs.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="rank_id"/>
                <filter name="filter_military" string="Military" domain="[('is_military', '=', True)]"/>
                <filter name="filter_civilian" string="Civilian" domain="[('is_military', '=', False)]"/>
                <separator/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>

                <filter name="group_rank" string="Rank" context="{'group_by': 'rank_id'}"/>
            </search>
        </field>
    </record>

    <!-- Student Action -->
    <record id="action_fs_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">fs.student</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student
            </p>
            <p>Students are enrolled in training programs at the flight school.</p>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Student Tree View -->
    <record id="view_fs_student_tree" model="ir.ui.view">
        <field name="name">fs.student.list</field>
        <field name="model">fs.student</field>
        <field name="arch" type="xml">
            <list decoration-danger="has_expired_status" decoration-success="has_expired_status == False" sample="1" multi_edit="1">
                <field name="has_expired_status" column_invisible="1"/>
                <field name="image_128" widget="image" options="{'size': [32, 32]}" string=" " class="rounded-circle ml-0 mr-0"/>
                <field name="name" decoration-bf="1"/>
                <field name="rank_id" optional="show"/>
                <field name="license_code" widget="badge" optional="hide"/>
                <field name="medical_status" widget="badge" optional="show" decoration-danger="medical_status == 'expired'" decoration-warning="medical_status == 'expiring'" decoration-success="medical_status == 'valid'" decoration-muted="medical_status == 'no_expiry'"/>
                <field name="license_expiry_status" widget="badge" optional="show" decoration-danger="license_expiry_status == 'expired'" decoration-warning="license_expiry_status == 'expiring'" decoration-success="license_expiry_status == 'valid'" decoration-muted="license_expiry_status == 'no_expiry'"/>
                <field name="security_clearance_status" widget="badge" optional="hide" decoration-danger="security_clearance_status == 'expired'" decoration-warning="security_clearance_status == 'expiring'" decoration-success="security_clearance_status == 'valid'" decoration-muted="security_clearance_status == 'no_expiry'"/>
                <field name="insurance_status" widget="badge" optional="hide" decoration-danger="insurance_status == 'expired'" decoration-warning="insurance_status == 'expiring'" decoration-success="insurance_status == 'valid'" decoration-muted="insurance_status == 'no_expiry'"/>
                <field name="total_flight_hours" widget="float_time" optional="show"/>
                <field name="solo_hours" widget="float_time" optional="hide"/>
                <field name="advance_payment" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Student Form View -->
    <record id="view_fs_student_form" model="ir.ui.view">
        <field name="name">fs.student.form</field>
        <field name="model">fs.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_user" type="object" 
                            string="Create User Account" 
                            class="btn-primary"
                            invisible="has_user"/>
                    <button name="action_view_user" type="object" 
                            string="View User Account" 
                            invisible="not has_user"/>
                </header>
                <sheet>
                    <field name="has_expired_status" invisible="1"/>
                    <div class="alert alert-danger text-center o_form_header shadow-sm mb-3" invisible="has_expired_status == False" role="alert">
                        <i class="fa fa-exclamation-triangle me-2" title="Warning"/> 
                        <strong>Attention Required:</strong> This student has expired or expiring compliance documents.
                    </div>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_user" type="object" 
                                class="oe_stat_button" icon="fa-user"
                                invisible="not has_user">
                            <div class="o_stat_info">
                                <span class="o_stat_text">User Profile</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    
                    <field name="image" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image': 'image_128'}"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Student Full Name"/>
                        </h1>
                    </div>

                    <group col="1">
                        <div class="p-2 bg-light border rounded shadow-sm">
                            <div class="row g-0 align-items-center text-center">
                                <div class="col px-3">
                                    <field name="medical_status" invisible="1"/>
                                    <div class="d-flex align-items-center justify-content-center mb-1" style="height: 2.6rem;">
                                        <i class="fa fa-medkit fa-2x text-danger" title="Medical Expired" invisible="medical_status != 'expired'"/>
                                        <i class="fa fa-medkit fa-2x text-warning" title="Medical Expiring" invisible="medical_status != 'expiring'"/>
                                        <i class="fa fa-medkit fa-2x text-success" title="Medical Valid" invisible="medical_status != 'valid'"/>
                                        <i class="fa fa-medkit fa-2x text-muted" title="Medical No Info" invisible="medical_status != 'no_expiry'"/>
                                    </div>
                                    <div class="h6 fw-bold mb-0">Medical</div>
                                    <div class="small text-muted text-nowrap"><field name="medical_expiry" nolabel="1"/></div>
                                </div>
                                <div class="col px-3 border-start">
                                    <field name="license_expiry_status" invisible="1"/>
                                    <div class="d-flex align-items-center justify-content-center mb-1" style="height: 2.6rem;">
                                        <i class="fa fa-id-card fa-2x text-danger" title="License Expired" invisible="license_expiry_status != 'expired'"/>
                                        <i class="fa fa-id-card fa-2x text-warning" title="License Expiring" invisible="license_expiry_status != 'expiring'"/>
                                        <i class="fa fa-id-card fa-2x text-success" title="License Valid" invisible="license_expiry_status != 'valid'"/>
                                        <i class="fa fa-id-card fa-2x text-muted" title="License No Info" invisible="license_expiry_status != 'no_expiry'"/>
                                    </div>
                                    <div class="h6 fw-bold mb-0">License</div>
                                    <div class="small text-muted text-nowrap"><field name="license_expiry" nolabel="1"/></div>
                                </div>
                                <div class="col px-3 border-start" invisible="is_military">
                                    <field name="security_clearance_status" invisible="1"/>
                                    <div class="d-flex align-items-center justify-content-center mb-1" style="height: 2.6rem;">
                                        <i class="fa fa-shield fa-2x text-danger" title="Security Expired" invisible="security_clearance_status != 'expired'"/>
                                        <i class="fa fa-shield fa-2x text-warning" title="Security Expiring" invisible="security_clearance_status != 'expiring'"/>
                                        <i class="fa fa-shield fa-2x text-success" title="Security Valid" invisible="security_clearance_status != 'valid'"/>
                                        <i class="fa fa-shield fa-2x text-muted" title="Security No Info" invisible="security_clearance_status != 'no_expiry'"/>
                                    </div>
                                    <div class="h6 fw-bold mb-0">Security</div>
                                    <div class="small text-muted text-nowrap"><field name="security_clearance_expiry" nolabel="1"/></div>
                                </div>
                                <div class="col px-3 border-start" invisible="is_military">
                                    <field name="insurance_status" invisible="1"/>
                                    <div class="d-flex align-items-center justify-content-center mb-1" style="height: 2.6rem;">
                                        <i class="fa fa-umbrella fa-2x text-danger" title="Insurance Expired" invisible="insurance_status != 'expired'"/>
                                        <i class="fa fa-umbrella fa-2x text-warning" title="Insurance Expiring" invisible="insurance_status != 'expiring'"/>
                                        <i class="fa fa-umbrella fa-2x text-success" title="Insurance Valid" invisible="insurance_status != 'valid'"/>
                                        <i class="fa fa-umbrella fa-2x text-muted" title="Insurance No Info" invisible="insurance_status != 'no_expiry'"/>
                                    </div>
                                    <div class="h6 fw-bold mb-0">Insurance</div>
                                    <div class="small text-muted text-nowrap"><field name="insurance_expiry" nolabel="1"/></div>
                                </div>
                            </div>
                            <div class="mt-3 pt-3 border-top row g-0 text-center">
                                <div class="col px-3">
                                    <div class="text-uppercase small fw-bold text-muted mb-1">Total Experience</div>
                                    <div class="h4 mb-0 text-primary text-nowrap"><field name="total_flight_hours" widget="float_time"/></div>
                                </div>
                                <div class="col px-3 border-start">
                                    <div class="text-uppercase small fw-bold text-muted mb-1">Solo Hours</div>
                                    <div class="h4 mb-0 text-success text-nowrap"><field name="solo_hours" widget="float_time"/></div>
                                </div>
                                <div class="col px-3 border-start" invisible="is_military">
                                    <div class="text-uppercase small fw-bold text-muted mb-1">Account Balance</div>
                                    <div class="h4 mb-0 text-warning d-flex justify-content-center align-items-center gap-1" style="white-space: nowrap !important;">
                                        <field name="advance_payment" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </div>
                                    <field name="currency_id" invisible="1"/>
                                </div>
                                <div class="col px-3 border-start" invisible="is_military">
                                    <div class="text-uppercase small fw-bold text-muted mb-1">License Type</div>
                                    <div class="h4 mb-0 text-secondary text-nowrap">
                                        <field name="license_id" readonly="1" options="{'no_open': True}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </group>


                    <notebook>
                        <page string="Overview" name="dashboard">
                            <group>
                                <group string="Identity &amp; Status" name="military">
                                    <field name="is_military"/>
                                    <field name="rank_id" options="{'no_create': True}" invisible="not is_military"/>
                                    <field name="service_number" invisible="not is_military"/>
                                </group>
                                <group string="" name="stats">
                                    <field name="phone"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </group>
                            </group>
                        </page>

                        <page string="License &amp; Compliance" name="license_compliance">
                            <group>
                                <group string="Primary License">
                                    <field name="license_id" options="{'no_create': True}"/>
                                    <field name="license_number"/>
                                    <field name="license_issue_date"/>
                                    <label for="license_expiry"/>
                                    <div class="o_row">
                                        <field name="license_expiry" decoration-danger="license_expiry_status == 'expired'" decoration-warning="license_expiry_status == 'expiring'"/>
                                        <field name="license_expiry_status" widget="badge" decoration-danger="license_expiry_status == 'expired'" decoration-warning="license_expiry_status == 'expiring'" decoration-success="license_expiry_status == 'valid'" decoration-muted="license_expiry_status == 'no_expiry'"/>
                                    </div>
                                </group>
                                <group string="Civilian Requirements" invisible="is_military">
                                    <label for="security_clearance_expiry"/>
                                    <div class="o_row">
                                        <field name="security_clearance_expiry" decoration-danger="security_clearance_status == 'expired'" decoration-warning="security_clearance_status == 'expiring'"/>
                                        <field name="security_clearance_status" widget="badge" decoration-danger="security_clearance_status == 'expired'" decoration-warning="security_clearance_status == 'expiring'" decoration-success="security_clearance_status == 'valid'" decoration-muted="security_clearance_status == 'no_expiry'"/>
                                    </div>
                                    <label for="insurance_expiry"/>
                                    <div class="o_row">
                                        <field name="insurance_expiry" decoration-danger="insurance_status == 'expired'" decoration-warning="insurance_status == 'expiring'"/>
                                        <field name="insurance_status" widget="badge" decoration-danger="insurance_status == 'expired'" decoration-warning="insurance_status == 'expiring'" decoration-success="insurance_status == 'valid'" decoration-muted="insurance_status == 'no_expiry'"/>
                                    </div>
                                </group>
                            </group>
                        </page>

                        <page string="Medical" name="medical">
                            <group>
                                <group string="Medical Certificate">
                                    <field name="medical_class_id" options="{'no_create': True}"/>
                                    <label for="medical_expiry"/>
                                    <div class="o_row">
                                        <field name="medical_expiry" decoration-danger="medical_status == 'expired'" decoration-warning="medical_status == 'expiring'"/>
                                        <field name="medical_status" widget="badge" decoration-danger="medical_status == 'expired'" decoration-warning="medical_status == 'expiring'" decoration-success="medical_status == 'valid'" decoration-muted="medical_status == 'no_expiry'"/>
                                    </div>
                                </group>
                            </group>
                        </page>

                        <page string="Personal Details" name="personal">
                            <group>
                                <group string="Identity">
                                    <field name="gender" widget="radio" options="{'horizontal': true}"/>
                                    <field name="birth_date"/>
                                    <field name="nationality_id" options="{'no_create': True}"/>
                                    <field name="identification_number"/>
                                </group>
                                <group string="Contact Details">
                                    <field name="phone"/>
                                    <field name="address" placeholder="Residential address..."/>
                                </group>
                            </group>
                        </page>

                        <page string="Administration" name="system">
                            <group>
                                <group string="System Links">
                                    <field name="user_id"/>
                                    <field name="has_user" invisible="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Internal Notes" name="notes">
                            <field name="notes" nolabel="1" placeholder="Add confidential student observations..."/>
                        </page>

                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Student Search View -->
    <record id="view_fs_student_search" model="ir.ui.view">
        <field name="name">fs.student.search</field>
        <field name="model">fs.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="rank_id"/>
                <filter name="filter_military" string="Military" domain="[('is_military', '=', True)]"/>
                <filter name="filter_civilian" string="Civilian" domain="[('is_military', '=', False)]"/>
                <separator/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>

                <filter name="group_rank" string="Rank" context="{'group_by': 'rank_id'}"/>
            </search>
        </field>
    </record>

    <!-- Student Kanban View -->
    <record id="view_fs_student_kanban" model="ir.ui.view">
        <field name="name">fs.student.kanban</field>
        <field name="model">fs.student</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="rank_id"/>
                <field name="medical_status"/>
                <field name="license_expiry_status"/>
                <field name="security_clearance_status"/>
                <field name="insurance_status"/>
                <field name="total_flight_hours"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex align-items-center">
                            <field name="image_128" widget="image" options="{'size': [64, 64]}" class="oe_avatar rounded-circle me-3"/>
                            <div class="flex-grow-1 overflow-hidden">
                                <div class="d-flex justify-content-between align-items-baseline mb-1">
                                    <strong class="o_kanban_record_title text-truncate fs-5">
                                        <field name="name"/>
                                    </strong>
                                    <div class="ms-2">
                                        <t t-if="record.medical_status.raw_value != 'no_expiry'">
                                            <i class="fa fa-medkit" t-att-class="record.medical_status.raw_value == 'expired' ? 'text-danger' : (record.medical_status.raw_value == 'expiring' ? 'text-warning' : 'text-success')" title="Medical Status"/>
                                        </t>
                                        <t t-if="record.license_expiry_status.raw_value != 'no_expiry'">
                                            <i class="fa fa-id-card ms-1" t-att-class="record.license_expiry_status.raw_value == 'expired' ? 'text-danger' : (record.license_expiry_status.raw_value == 'expiring' ? 'text-warning' : 'text-success')" title="License Status"/>
                                        </t>
                                        <t t-if="record.security_clearance_status.raw_value != 'no_expiry'">
                                            <i class="fa fa-shield ms-1" t-att-class="record.security_clearance_status.raw_value == 'expired' ? 'text-danger' : (record.security_clearance_status.raw_value == 'expiring' ? 'text-warning' : 'text-success')" title="Security Status"/>
                                        </t>
                                        <t t-if="record.insurance_status.raw_value != 'no_expiry'">
                                            <i class="fa fa-umbrella ms-1" t-att-class="record.insurance_status.raw_value == 'expired' ? 'text-danger' : (record.insurance_status.raw_value == 'expiring' ? 'text-warning' : 'text-success')" title="Insurance Status"/>
                                        </t>
                                    </div>
                                </div>
                                <div class="text-muted small">
                                    <t t-if="record.rank_id.raw_value">
                                        <field name="rank_id"/><br/>
                                    </t>
                                    <i class="fa fa-clock-o me-1" title="Flight Hours"/> <field name="total_flight_hours" widget="float_time"/> Experience
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Student Action -->
    <record id="action_fs_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">fs.student</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student
            </p>
            <p>Students are enrolled in training programs at the flight school.</p>
        </field>
    </record>
</odoo>

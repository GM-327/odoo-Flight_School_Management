<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Department Form View -->
    <record id="view_fs_department_form" model="ir.ui.view">
        <field name="name">fs.department.form</field>
        <field name="model">fs.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Management, Operations, Maintenance..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="parent_id"/>
                            <field name="manager_id"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sub-Departments" name="sub_departments">
                            <field name="child_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="manager_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Internal notes regarding this department..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Department List View -->
    <record id="view_fs_department_list" model="ir.ui.view">
        <field name="name">fs.department.list</field>
        <field name="model">fs.department</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="manager_id"/>
                <field name="parent_id"/>
            </list>
        </field>
    </record>

    <!-- Department Action -->
    <record id="action_fs_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">fs.department</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage Departments
            </p>
            <p>Define the organizational structure of the Flight School.</p>
        </field>
    </record>
</odoo>

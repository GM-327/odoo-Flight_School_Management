<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Using set_param function to safely update or create system parameters -->
        
        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.default_home_base</value>
            <value>DTTI</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.default_country_id</value>
            <value eval="str(ref('base.tn'))"/>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.default_max_students</value>
            <value>6</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.default_max_hours_per_month</value>
            <value>60.0</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.default_max_hours_per_3months</value>
            <value>150.0</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.medical_warning_days</value>
            <value>40</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.license_warning_days</value>
            <value>35</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.english_warning_days</value>
            <value>60</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.maintenance_warning_hours</value>
            <value>5.0</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.class_end_warning_days</value>
            <value>14</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.insurance_warning_days</value>
            <value>14</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.security_warning_days</value>
            <value>60</value>
        </function>

        <function model="ir.config_parameter" name="set_param">
            <value>flight_school.annual_inspection_warning_days</value>
            <value>30</value>
        </function>
    </data>
</odoo>

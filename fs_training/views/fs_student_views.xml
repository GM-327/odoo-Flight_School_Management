<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Student Form View -->
    <record id="view_fs_student_form_inherit_training" model="ir.ui.view">
        <field name="name">fs.student.form.inherit.training</field>
        <field name="model">fs.student</field>
        <field name="inherit_id" ref="fs_people.view_fs_student_form"/>
        <field name="arch" type="xml">
            <!-- Add Stat Button for Enrolled Classes -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_enrolled_classes" type="object" 
                        class="oe_stat_button" icon="fa-university">
                    <div class="o_stat_info">
                        <field name="enrollment_count" class="o_stat_value"/>
                        <span class="o_stat_text">Classes</span>
                    </div>
                </button>
            </xpath>
            
            <!-- Add Callsign subtitle -->
            <xpath expr="//div[hasclass('oe_title')]/h1" position="after">
                <label for="callsign" class="oe_edit_only" invisible="not callsign"/>
                <h2 invisible="not callsign">
                    <field name="callsign"/>
                </h2>
            </xpath>

            <!-- Replace License Type with Current Class in Dashboard -->
            <xpath expr="//div[hasclass('p-2')][hasclass('bg-light')]//field[@name='license_id']/ancestor::div[hasclass('col')]" position="replace">
                <div class="col px-3 border-start" invisible="is_military">
                    <div class="text-uppercase small fw-bold text-muted mb-1">Current Class</div>
                    <div class="h4 mb-0 text-secondary text-nowrap">
                        <field name="current_class_code" readonly="1"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Inherit Student Kanban View -->
    <record id="view_fs_student_kanban_inherit_training" model="ir.ui.view">
        <field name="name">fs.student.kanban.inherit.training</field>
        <field name="model">fs.student</field>
        <field name="inherit_id" ref="fs_people.view_fs_student_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="inside">
                <field name="callsign"/>
                <field name="current_class_code"/>
                <field name="enrollment_status"/>
                <field name="enrollment_progression"/>
                <field name="enrollment_remaining_hours"/>
                <field name="enrollment_expected_end_date"/>
            </xpath>
            <xpath expr="//*[hasclass('o_kanban_record_title')]" position="replace">
                <strong class="o_kanban_record_title text-truncate fs-5">
                    <t t-if="record.callsign.raw_value">[<field name="callsign"/>] </t><field name="name"/>
                </strong>
            </xpath>
            <xpath expr="//div[hasclass('text-muted')][hasclass('small')]" position="inside">
                <div t-if="record.current_class_code.raw_value" class="mt-2 p-1 bg-light border-top border-bottom">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <span class="badge rounded-pill text-bg-info">
                            <field name="current_class_code"/>
                        </span>
                        <field name="enrollment_status" widget="label_selection" options="{'classes': {'active': 'success', 'enrolled': 'info', 'graduated': 'warning'}}"/>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <field name="enrollment_progression" widget="progressbar" class="flex-grow-1" style="height: 8px;"/>
                        <span class="small fw-bold text-nowrap"><field name="enrollment_remaining_hours" widget="float_time"/> left</span>
                    </div>
                    <div t-if="record.enrollment_expected_end_date.raw_value" class="x-small mt-1 text-end italic">
                        Ends: <field name="enrollment_expected_end_date"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Flight Type Views -->

    <!-- Tree View -->
    <record id="view_flight_type_tree" model="ir.ui.view">
        <field name="name">fs.flight.type.list</field>
        <field name="model">fs.flight.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="color" widget="color_picker"/>
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_flight_type_form" model="ir.ui.view">
        <field name="name">fs.flight.type.form</field>
        <field name="model">fs.flight.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_flight_type" model="ir.actions.act_window">
        <field name="name">Flight Types</field>
        <field name="res_model">fs.flight.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define flight types
            </p>
            <p>Flight types (Solo, Dual) combine with disciplines for hour tracking.</p>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Flight Discipline Views -->

    <!-- Tree View -->
    <record id="view_flight_discipline_tree" model="ir.ui.view">
        <field name="name">fs.flight.discipline.list</field>
        <field name="model">fs.flight.discipline</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="color" widget="color_picker"/>
                <field name="code"/>
                <field name="name"/>
                <field name="default_flight_duration" widget="float_time"/>
                <field name="description" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_flight_discipline_form" model="ir.ui.view">
        <field name="name">fs.flight.discipline.form</field>
        <field name="model">fs.flight.discipline</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="default_flight_duration" widget="float_time"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <separator string="Description"/>
                    <field name="description" nolabel="1" placeholder="Discipline description..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_flight_discipline" model="ir.actions.act_window">
        <field name="name">Flight Disciplines</field>
        <field name="res_model">fs.flight.discipline</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define flight disciplines
            </p>
            <p>Flight disciplines categorize flight hours (MAN, NAV, IFR, etc.).</p>
        </field>
    </record>
</odoo>

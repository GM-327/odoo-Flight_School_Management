<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="fs_flight_activity_view_tree" model="ir.ui.view">
        <field name="name">fs.flight.activity.view.tree</field>
        <field name="model">fs.flight.activity</field>
        <field name="arch" type="xml">
            <list string="Flight Activities" editable="bottom">
                <field name="discipline_id"/>
                <field name="flight_type_id"/>
                <field name="code"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="fs_flight_activity_view_form" model="ir.ui.view">
        <field name="name">fs.flight.activity.view.form</field>
        <field name="model">fs.flight.activity</field>
        <field name="arch" type="xml">
            <form string="Flight Activity">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="discipline_id"/>
                            <field name="flight_type_id"/>
                        </group>
                        <group>
                            <field name="code"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="fs_flight_activity_view_search" model="ir.ui.view">
        <field name="name">fs.flight.activity.search</field>
        <field name="model">fs.flight.activity</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="discipline_id"/>
                <field name="flight_type_id"/>
                <separator/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Discipline" name="group_discipline" context="{'group_by': 'discipline_id'}"/>
                <filter string="Flight Type" name="group_type" context="{'group_by': 'flight_type_id'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="fs_flight_activity_action" model="ir.actions.act_window">
        <field name="name">Flight Activities</field>
        <field name="res_model">fs.flight.activity</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new flight activity!
            </p>
            <p>
                Pair Disciplines (MAN, NAV, etc.) with Flight Types (Solo, Dual) 
                to track training requirements.
            </p>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Flight Mission Views -->

    <!-- Tree View -->
    <record id="view_flight_mission_tree" model="ir.ui.view">
        <field name="name">fs.flight.mission.list</field>
        <field name="model">fs.flight.mission</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="class_type_id"/>
                <field name="discipline_color" column_invisible="1"/>
                <field name="discipline_id" widget="badge" decoration-bf="1" options="{'color_field': 'discipline_color'}"/>
                <field name="flight_type_color" column_invisible="1"/>
                <field name="flight_type_id" widget="badge" decoration-bf="1" options="{'color_field': 'flight_type_color'}"/>
                <field name="mission_type" widget="badge"
                       decoration-info="mission_type == 'flight'"
                       decoration-warning="mission_type == 'sim'"
                       decoration-danger="mission_type == 'exam'"/>
                <field name="duration_hours" widget="float_time"/>
                <button name="action_duplicate_mission" type="object" icon="fa-copy" title="Duplicate Mission"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_flight_mission_form" model="ir.ui.view">
        <field name="name">fs.flight.mission.form</field>
        <field name="model">fs.flight.mission</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Mission Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="class_type_id"/>
                            <field name="discipline_id"/>
                            <field name="flight_type_id"/>
                            <field name="mission_type" widget="radio"/>
                        </group>
                        <group string="Details">
                            <field name="duration_hours" widget="float_time"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" nolabel="1" placeholder="Mission description..."/>
                        </page>
                        <page string="Objectives" name="objectives">
                            <field name="objectives" nolabel="1" placeholder="Learning objectives..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_flight_mission_search" model="ir.ui.view">
        <field name="name">fs.flight.mission.search</field>
        <field name="model">fs.flight.mission</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="class_type_id"/>
                <field name="discipline_id"/>
                <filter name="flight" string="Flight" domain="[('mission_type', '=', 'flight')]"/>
                <filter name="sim" string="Simulator" domain="[('mission_type', '=', 'sim')]"/>
                <filter name="exam" string="Exam" domain="[('mission_type', '=', 'exam')]"/>
                <separator/>
                <filter string="Class Type" name="group_class_type" context="{'group_by': 'class_type_id'}"/>
                <filter string="Discipline" name="group_discipline" context="{'group_by': 'discipline_id'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_flight_mission" model="ir.actions.act_window">
        <field name="name">Flight Missions</field>
        <field name="res_model">fs.flight.mission</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_class_type': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define flight missions
            </p>
            <p>Flight missions form the syllabus for each class type.</p>
        </field>
    </record>
</odoo>

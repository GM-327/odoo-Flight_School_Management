<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Flight Mission Views -->

    <!-- Tree View -->
    <record id="view_flight_mission_tree" model="ir.ui.view">
        <field name="name">fs.flight.mission.list</field>
        <field name="model">fs.flight.mission</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="class_type_id"/>
                <field name="activity_id"/>
                <field name="is_exam" widget="boolean_toggle"/>
                <field name="is_extra" widget="boolean_toggle"/>
                <field name="duration_hours" widget="float_time"/>
                <button name="action_duplicate_mission" type="object" icon="fa-copy" title="Duplicate Mission"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_flight_mission_form" model="ir.ui.view">
        <field name="name">fs.flight.mission.form</field>
        <field name="model">fs.flight.mission</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Mission Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="class_type_id"/>
                            <field name="activity_id"/>
                            <field name="is_exam" widget="boolean_toggle"/>
                            <field name="is_extra" widget="boolean_toggle"/>
                        </group>
                        <group string="Details">
                            <field name="duration_hours" widget="float_time"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" nolabel="1" placeholder="Mission description..."/>
                        </page>
                        <page string="Objectives" name="objectives">
                            <field name="objectives" nolabel="1" placeholder="Learning objectives..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_flight_mission_search" model="ir.ui.view">
        <field name="name">fs.flight.mission.search</field>
        <field name="model">fs.flight.mission</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="class_type_id"/>
                <field name="activity_id"/>
                <filter name="is_exam" string="Is Exam" domain="[('is_exam', '=', True)]"/>
                <filter name="is_extra" string="Is Revision/Extra" domain="[('is_extra', '=', True)]"/>
                <filter name="is_training" string="Core Training" domain="[('is_exam', '=', False), ('is_extra', '=', False)]"/>
                <separator/>
                <filter string="Class Type" name="group_class_type" context="{'group_by': 'class_type_id'}"/>
                <filter string="Activity" name="group_activity" context="{'group_by': 'activity_id'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_flight_mission" model="ir.actions.act_window">
        <field name="name">Flight Missions</field>
        <field name="res_model">fs.flight.mission</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_class_type': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define flight missions
            </p>
            <p>Flight missions form the syllabus for each class type.</p>
        </field>
    </record>
</odoo>

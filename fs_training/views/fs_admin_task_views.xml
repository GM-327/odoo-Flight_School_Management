<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Admin Task Template Views -->

    <!-- Tree View -->
    <record id="view_admin_task_template_tree" model="ir.ui.view">
        <field name="name">fs.admin.task.template.list</field>
        <field name="model">fs.admin.task.template</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_admin_task_template_form" model="ir.ui.view">
        <field name="name">fs.admin.task.template.form</field>
        <field name="model">fs.admin.task.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <separator string="Instructions"/>
                    <field name="description" nolabel="1" placeholder="Task instructions..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_admin_task_template_search" model="ir.ui.view">
        <field name="name">fs.admin.task.template.search</field>
        <field name="model">fs.admin.task.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_admin_task_template" model="ir.actions.act_window">
        <field name="name">Admin Task Templates</field>
        <field name="res_model">fs.admin.task.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define admin task templates
            </p>
            <p>Admin task templates are a library of suggested tasks. Select them when configuring class types.</p>
        </field>
    </record>

    <!-- Admin Task Instance Views (for Training Class) -->

    <!-- Tree View -->
    <record id="view_admin_task_tree" model="ir.ui.view">
        <field name="name">fs.admin.task.list</field>
        <field name="model">fs.admin.task</field>
        <field name="arch" type="xml">
            <list editable="bottom" decoration-success="is_done" decoration-muted="is_done">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="is_done" widget="boolean_toggle"/>
                <field name="done_date" readonly="1"/>
                <field name="done_by_id" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_admin_task_form" model="ir.ui.view">
        <field name="name">fs.admin.task.form</field>
        <field name="model">fs.admin.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="training_class_id"/>
                        </group>
                        <group>
                            <field name="is_done"/>
                            <field name="done_date" invisible="not is_done"/>
                            <field name="done_by_id" invisible="not is_done"/>
                        </group>
                    </group>
                    <separator string="Instructions"/>
                    <field name="description" nolabel="1" placeholder="Task instructions..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_admin_task_search" model="ir.ui.view">
        <field name="name">fs.admin.task.search</field>
        <field name="model">fs.admin.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="training_class_id"/>
                <filter name="done" string="Done" domain="[('is_done', '=', True)]"/>
                <filter name="pending" string="Pending" domain="[('is_done', '=', False)]"/>
                <separator/>
                <filter name="group_class" string="Training Class" context="{'group_by': 'training_class_id'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_admin_task" model="ir.actions.act_window">
        <field name="name">Admin Tasks</field>
        <field name="res_model">fs.admin.task</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_pending': 1, 'search_default_group_class': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No admin tasks
            </p>
            <p>Admin tasks are created automatically from templates when a training class is created.</p>
        </field>
    </record>
</odoo>

        </record>

        <!-- Flight Missions for IFR -->
        <record id="mission_ir_sim_1" model="fs.flight.mission">
            <field name="name">IR-SIM01 Instrument Scan</field>
            <field name="class_type_id" ref="fs_training.class_type_ir"/>

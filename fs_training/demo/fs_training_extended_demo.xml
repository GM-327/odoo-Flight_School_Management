            <field name="activity_id" ref="fs_training.activity_man_dual"/>
            <field name="duration_hours">1.5</field>
            <field name="sequence">10</field>
            <field name="objectives">Aircraft familiarization, effects of controls</field>
        </record>
        <record id="mission_basic_2" model="fs.flight.mission">

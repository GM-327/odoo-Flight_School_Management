            <field name="class_type_id" ref="fs_training.class_type_basic"/>
            <field name="activity_id" ref="fs_training.activity_man_dual"/>
            <field name="duration_hours">1.5</field>
            <field name="sequence">50</field>
        </record>
        <record id="mission_basic_6" model="fs.flight.mission">
            <field name="name">BAS-06 Stalls</field>
            <field name="class_type_id" ref="fs_training.class_type_basic"/>
            <field name="activity_id" ref="fs_training.activity_man_dual"/>
            <field name="duration_hours">1.5</field>
            <field name="sequence">60</field>
        </record>
        <record id="mission_basic_7" model="fs.flight.mission">
            <field name="name">BAS-07 Circuit Training</field>
            <field name="class_type_id" ref="fs_training.class_type_basic"/>
            <field name="activity_id" ref="fs_training.activity_man_dual"/>
            <field name="duration_hours">1.5</field>
            <field name="sequence">70</field>
        </record>
        <record id="mission_basic_solo_1" model="fs.flight.mission">
            <field name="name">BAS-S01 First Solo</field>
            <field name="class_type_id" ref="fs_training.class_type_basic"/>
            <field name="activity_id" ref="fs_training.activity_man_solo"/>
            <field name="duration_hours">1.0</field>
            <field name="sequence">100</field>
            <field name="objectives">First solo flight - 3 circuits</field>
        </record>
        <record id="mission_basic_nav_1" model="fs.flight.mission">
            <field name="name">BAS-N01 Nav Intro</field>
            <field name="class_type_id" ref="fs_training.class_type_basic"/>
            <field name="activity_id" ref="fs_training.activity_nav_dual"/>
            <field name="duration_hours">2.0</field>
            <field name="sequence">150</field>
        </record>
        <record id="mission_basic_exam" model="fs.flight.mission">
            <field name="name">BAS-EXAM Final Check</field>
            <field name="class_type_id" ref="fs_training.class_type_basic"/>
            <field name="activity_id" ref="fs_training.activity_man_dual"/>
            <field name="duration_hours">1.5</field>
            <field name="sequence">500</field>
            <field name="is_exam">True</field>
        </record>

        <!-- Flight Missions for PPL -->
        <record id="mission_ppl_1" model="fs.flight.mission">

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Medical Certificate - applies to Student, Instructor, Pilot -->
        <record id="document_type_medical" model="fs.document.type">
            <field name="name">Medical Certificate</field>
            <field name="code">MED</field>
            <field name="description">Medical certificate or health report</field>
            <field name="applies_to_ids" eval="[(6, 0, [ref('entity_type_student'), ref('entity_type_instructor'), ref('entity_type_pilot')])]"/>
            <field name="has_expiry">True</field>
            <field name="expiry_field">medical_expiry</field>
            <field name="sequence">10</field>
        </record>

        <!-- License Copy - applies to Student, Instructor, Pilot -->
        <record id="document_type_license" model="fs.document.type">
            <field name="name">License Copy</field>
            <field name="code">LIC</field>
            <field name="description">Copy of pilot or student license</field>
            <field name="applies_to_ids" eval="[(6, 0, [ref('entity_type_student'), ref('entity_type_instructor'), ref('entity_type_pilot')])]"/>
            <field name="has_expiry">True</field>
            <field name="expiry_field">license_expiry</field>
            <field name="sequence">20</field>
        </record>

        <!-- Insurance Certificate - applies to Student, Pilot -->
        <record id="document_type_insurance" model="fs.document.type">
            <field name="name">Insurance Certificate</field>
            <field name="code">INS</field>
            <field name="description">Liability insurance certificate</field>
            <field name="applies_to_ids" eval="[(6, 0, [ref('entity_type_student'), ref('entity_type_pilot')])]"/>
            <field name="has_expiry">True</field>
            <field name="expiry_field">insurance_expiry</field>
            <field name="sequence">30</field>
        </record>

        <!-- Security Clearance - applies to Student, Instructor, Pilot -->
        <record id="document_type_security" model="fs.document.type">
            <field name="name">Security Clearance</field>
            <field name="code">SEC</field>
            <field name="description">Security clearance document</field>
            <field name="applies_to_ids" eval="[(6, 0, [ref('entity_type_student'), ref('entity_type_instructor'), ref('entity_type_pilot')])]"/>
            <field name="has_expiry">True</field>
            <field name="expiry_field">security_clearance_expiry</field>
            <field name="sequence">40</field>
        </record>

        <!-- ID Document - applies to all persons -->
        <record id="document_type_id" model="fs.document.type">
            <field name="name">ID Document</field>
            <field name="code">ID</field>
            <field name="description">National ID, passport, or military ID</field>
            <field name="applies_to_ids" eval="[(6, 0, [ref('entity_type_student'), ref('entity_type_instructor'), ref('entity_type_pilot')])]"/>
            <field name="has_expiry">True</field>
            <field name="sequence">50</field>
        </record>

        <!-- English Proficiency - applies to Instructor, Pilot -->
        <record id="document_type_english" model="fs.document.type">
            <field name="name">English Proficiency</field>
            <field name="code">ENG</field>
            <field name="description">English proficiency certificate</field>
            <field name="applies_to_ids" eval="[(6, 0, [ref('entity_type_instructor'), ref('entity_type_pilot')])]"/>
            <field name="has_expiry">True</field>
            <field name="expiry_field">english_expiry</field>
            <field name="sequence">60</field>
        </record>

        <!-- Training Certificate - applies to Student -->
        <record id="document_type_training_cert" model="fs.document.type">
            <field name="name">Training Certificate</field>
            <field name="code">CERT</field>
            <field name="description">Training completion certificate</field>
            <field name="applies_to_ids" eval="[(6, 0, [ref('entity_type_student')])]"/>
            <field name="has_expiry">False</field>
            <field name="sequence">70</field>
        </record>

        <!-- Class Documentation - applies to Training Class -->
        <record id="document_type_class" model="fs.document.type">
            <field name="name">Class Documentation</field>
            <field name="code">CLASS</field>
            <field name="description">Training class related documents</field>
            <field name="applies_to_ids" eval="[(6, 0, [ref('entity_type_training_class')])]"/>
            <field name="has_expiry">False</field>
            <field name="sequence">80</field>
        </record>

        <!-- Admin Document - applies to Admin Task -->
        <record id="document_type_admin" model="fs.document.type">
            <field name="name">Admin Document</field>
            <field name="code">ADMIN</field>
            <field name="description">Administrative task related documents</field>
            <field name="applies_to_ids" eval="[(6, 0, [ref('entity_type_admin_task')])]"/>
            <field name="has_expiry">False</field>
            <field name="sequence">90</field>
        </record>

        <!-- Other - applies to Other -->
        <record id="document_type_other" model="fs.document.type">
            <field name="name">Other</field>
            <field name="code">OTHER</field>
            <field name="description">Miscellaneous documents</field>
            <field name="applies_to_ids" eval="[(6, 0, [ref('entity_type_other')])]"/>
            <field name="has_expiry">False</field>
            <field name="sequence">100</field>
        </record>
    </data>
</odoo>

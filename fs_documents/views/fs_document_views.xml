<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Tree View -->
    <record id="view_fs_document_tree" model="ir.ui.view">
        <field name="name">fs.document.list</field>
        <field name="model">fs.document</field>
        <field name="arch" type="xml">
            <list decoration-danger="expiry_status == 'expired'" decoration-warning="expiry_status == 'expiring'" sample="1">
                <field name="name"/>
                <field name="document_type_id"/>
                <field name="student_id" optional="hide"/>
                <field name="instructor_id" optional="hide"/>
                <field name="pilot_id" optional="hide"/>
                <field name="training_class_id" optional="hide"/>
                <field name="issue_date" optional="show"/>
                <field name="expiry_date" optional="show"/>
                <field name="expiry_status" widget="badge" 
                       decoration-danger="expiry_status == 'expired'" 
                       decoration-warning="expiry_status == 'expiring'" 
                       decoration-success="expiry_status == 'valid'" 
                       decoration-muted="expiry_status == 'no_expiry'"/>
                <field name="version_count" string="Ver."/>
                <field name="filename" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Document Form View -->
    <record id="view_fs_document_form" model="ir.ui.view">
        <field name="name">fs.document.form</field>
        <field name="model">fs.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="expiry_status" invisible="1"/>
                    <div class="alert alert-danger text-center o_form_header shadow-sm mb-3" 
                         invisible="expiry_status != 'expired'" role="alert">
                        <i class="fa fa-exclamation-triangle me-2" title="Warning"/> 
                        <strong>Document Expired!</strong> This document has passed its expiry date.
                    </div>
                    <div class="alert alert-warning text-center o_form_header shadow-sm mb-3" 
                         invisible="expiry_status != 'expiring'" role="alert">
                        <i class="fa fa-clock-o me-2" title="Warning"/> 
                        <strong>Expiring Soon:</strong> This document will expire soon.
                    </div>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_versions" type="object" 
                                class="oe_stat_button" icon="fa-history">
                            <field name="version_count" widget="statinfo" string="Versions"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Document Type">
                            <field name="document_type_id" readonly="id" options="{'no_create': True}"/>
                            <field name="reference"/>
                            <field name="issue_date"/>
                            <label for="expiry_date"/>
                            <div class="o_row">
                                <field name="expiry_date" 
                                       decoration-danger="expiry_status == 'expired'" 
                                       decoration-warning="expiry_status == 'expiring'"/>
                                <field name="expiry_status" widget="badge" 
                                       decoration-danger="expiry_status == 'expired'" 
                                       decoration-warning="expiry_status == 'expiring'" 
                                       decoration-success="expiry_status == 'valid'" 
                                       decoration-muted="expiry_status == 'no_expiry'"/>
                            </div>
                        </group>
                        <group string="Related To">
                            <field name="student_id" options="{'no_create': True}"/>
                            <field name="instructor_id" options="{'no_create': True}"/>
                            <field name="pilot_id" options="{'no_create': True}"/>
                            <field name="training_class_id" options="{'no_create': True}"/>
                            <field name="admin_task_id" options="{'no_create': True}"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Current File" name="current_file">
                            <div class="mb-3">
                                <button name="action_add_version" type="object" class="btn btn-primary" icon="fa-plus">
                                    Upload New Version
                                </button>
                            </div>
                            <group>
                                <group>
                                    <field name="filename" readonly="1"/>
                                    <field name="file_type" readonly="1"/>
                                    <field name="file" filename="filename" widget="binary" readonly="1"/>
                                </group>
                                <group invisible="file_type != 'image'">
                                    <field name="file" widget="image" class="oe_avatar" readonly="1" nolabel="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Version History" name="versions">
                            <field name="version_ids" nolabel="1">
                                <list decoration-bf="is_current" create="0">
                                    <field name="version_number"/>
                                    <field name="reference"/>
                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>
                                    <field name="filename"/>
                                    <field name="file_type"/>
                                    <field name="upload_date"/>
                                    <field name="uploaded_by_id"/>
                                    <field name="is_current"/>
                                    <button name="action_set_as_current" type="object" 
                                            string="Set Current" icon="fa-check"
                                            invisible="is_current"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1" placeholder="Add notes about this document..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Document Version Form View (for popup) -->
    <record id="view_fs_document_version_form" model="ir.ui.view">
        <field name="name">fs.document.version.form</field>
        <field name="model">fs.document.version</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Document Details">
                            <field name="reference" placeholder="e.g., CERT-2024-001"/>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                        </group>
                        <group string="File Upload">
                            <field name="file" filename="filename" widget="binary" required="1"/>
                            <field name="filename" required="1"/>
                            <field name="file_type" readonly="1" invisible="not file_type"/>
                        </group>
                    </group>
                    <group>
                        <group string="Info" invisible="not document_id">
                            <field name="document_id" readonly="1"/>
                            <field name="version_number" readonly="1"/>
                            <field name="upload_date" readonly="1"/>
                            <field name="uploaded_by_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Notes about this version..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Document Search View -->
    <record id="view_fs_document_search" model="ir.ui.view">
        <field name="name">fs.document.search</field>
        <field name="model">fs.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="document_type_id"/>
                <field name="student_id"/>
                <field name="instructor_id"/>
                <field name="pilot_id"/>
                <field name="training_class_id"/>
                <separator/>
                <filter name="filter_expired" string="Expired" domain="[('expiry_status', '=', 'expired')]"/>
                <filter name="filter_expiring" string="Expiring Soon" domain="[('expiry_status', '=', 'expiring')]"/>
                <filter name="filter_valid" string="Valid" domain="[('expiry_status', '=', 'valid')]"/>
                <separator/>
                <filter name="filter_students" string="Student Documents" domain="[('student_id', '!=', False)]"/>
                <filter name="filter_instructors" string="Instructor Documents" domain="[('instructor_id', '!=', False)]"/>
                <filter name="filter_pilots" string="Pilot Documents" domain="[('pilot_id', '!=', False)]"/>
                <filter name="filter_classes" string="Class Documents" domain="[('training_class_id', '!=', False)]"/>
                <separator/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="group_type" string="Document Type" context="{'group_by': 'document_type_id'}"/>
                <filter name="group_status" string="Expiry Status" context="{'group_by': 'expiry_status'}"/>
            </search>
        </field>
    </record>

    <!-- Document Kanban View -->
    <record id="view_fs_document_kanban" model="ir.ui.view">
        <field name="name">fs.document.kanban</field>
        <field name="model">fs.document</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="document_type_id"/>
                <field name="document_type_code"/>
                <field name="expiry_date"/>
                <field name="expiry_status"/>
                <field name="file_type"/>
                <field name="filename"/>
                <field name="file"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <t t-if="record.file_type.raw_value == 'image'">
                                    <field name="file" widget="image" options="{'size': [64, 64]}" class="rounded"/>
                                </t>
                                <t t-elif="record.file_type.raw_value == 'pdf'">
                                    <i class="fa fa-file-pdf-o fa-3x text-danger" title="PDF Document"/>
                                </t>
                                <t t-else="">
                                    <i class="fa fa-file-o fa-3x text-muted" title="File"/>
                                </t>
                            </div>
                            <div class="flex-grow-1 overflow-hidden">
                                <div class="d-flex justify-content-between align-items-baseline mb-1">
                                    <strong class="o_kanban_record_title text-truncate">
                                        <field name="name"/>
                                    </strong>
                                    <span class="badge rounded-pill ms-2" 
                                          t-att-class="record.expiry_status.raw_value == 'expired' ? 'text-bg-danger' : (record.expiry_status.raw_value == 'expiring' ? 'text-bg-warning' : (record.expiry_status.raw_value == 'valid' ? 'text-bg-success' : 'text-bg-secondary'))">
                                        <field name="expiry_status"/>
                                    </span>
                                </div>
                                <div class="text-muted small">
                                    <span class="badge text-bg-light border"><field name="document_type_code"/></span>
                                    <t t-if="record.expiry_date.raw_value">
                                        <br/><i class="fa fa-calendar me-1"/>Expires: <field name="expiry_date"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Document Actions -->
    <record id="action_fs_document" model="ir.actions.act_window">
        <field name="name">All Documents</field>
        <field name="res_model">fs.document</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload your first document
            </p>
            <p>Manage scanned documents with version control and expiry tracking.</p>
        </field>
    </record>

    <record id="action_fs_document_expiring" model="ir.actions.act_window">
        <field name="name">Expiring Soon</field>
        <field name="res_model">fs.document</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('expiry_status', 'in', ['expired', 'expiring'])]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No expiring documents
            </p>
            <p>All documents are up to date.</p>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
    Menu Structure for fs_fleet
    ===========================
    Standalone app with its own menu structure.
    -->

    <!-- Root Menu: Fleet (standalone app menu) -->
    <menuitem id="menu_fleet_root"
              name="Fleet"
              web_icon="fs_fleet,static/description/icon.svg"
              sequence="20"/>

    <!-- Dashboard -->
    <menuitem id="menu_fleet_dashboard"
              name="Dashboard"
              parent="menu_fleet_root"
              action="action_fs_fleet_dashboard"
              sequence="1"/>

    <!-- Fleet submenu items -->
    <menuitem id="menu_aircraft"
              name="Aircraft"
              parent="menu_fleet_root"
              action="action_aircraft"
              sequence="10"/>

    <menuitem id="menu_aircraft_available"
              name="Available"
              parent="menu_fleet_root"
              action="action_aircraft_available"
              sequence="20"/>

    <menuitem id="menu_aircraft_maintenance"
              name="Maintenance Due"
              parent="menu_fleet_root"
              action="action_aircraft_maintenance_due"
              sequence="30"/>

    <!-- Configuration submenu (under Fleet app) -->
    <menuitem id="menu_config_fleet"
              name="Configuration"
              parent="menu_fleet_root"
              sequence="999"
              groups="fs_core.group_flight_school_admin"/>

    <menuitem id="menu_config_aircraft_category"
              name="Aircraft Categories"
              parent="menu_config_fleet"
              action="action_aircraft_category"
              sequence="10"
              groups="fs_core.group_flight_school_admin"/>

    <menuitem id="menu_config_aircraft_type"
              name="Aircraft Types"
              parent="menu_config_fleet"
              action="action_aircraft_type"
              sequence="20"
              groups="fs_core.group_flight_school_admin"/>

</odoo>

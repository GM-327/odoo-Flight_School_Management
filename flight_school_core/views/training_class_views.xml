<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Training Class Views
    ====================
    List, Form, Kanban, Calendar, Graph, and Search views for fs.training.class.
    -->

    <!-- ============== ACTION ============== -->
    <record id="action_fs_training_class" model="ir.actions.act_window">
        <field name="name">Training Classes</field>
        <field name="res_model">fs.training.class</field>
        <field name="view_mode">list,form,calendar,graph,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Training Class
            </p>
            <p>
                Organize students into cohorts that progress together through a training program.
            </p>
        </field>
    </record>

    <!-- ============== LIST VIEW ============== -->
    <record id="view_fs_training_class_list" model="ir.ui.view">
        <field name="name">fs.training.class.list</field>
        <field name="model">fs.training.class</field>
        <field name="arch" type="xml">
            <list string="Training Classes" default_order="expected_end_date asc">
                <field name="color" widget="color-picker" optional="hide" invisible="1"/>
                <field name="code"/>
                <field name="name" optional="show"/>
                <field name="class_type_id" widget="badge"/>
                <field name="start_date"/>
                <field name="expected_end_date" optional="show" decoration-warning="end_date_warning"/>
                <field name="status" widget="badge" 
                       decoration-info="status == 'draft'" 
                       decoration-primary="status == 'active'" 
                       decoration-success="status == 'completed'" 
                       decoration-danger="status == 'cancelled'"/>
                <field name="student_count"/>
                <field name="progress_percentage" widget="progressbar" optional="show"/>
            </list>
        </field>
    </record>

    <!-- ============== FORM VIEW ============== -->
    <record id="view_fs_training_class_form" model="ir.ui.view">
        <field name="name">fs.training.class.form</field>
        <field name="model">fs.training.class</field>
        <field name="arch" type="xml">
            <form string="Training Class">
                <header>
                    <button name="action_set_draft" string="Set to Draft" type="object" 
                            invisible="status == 'draft'" class="btn-secondary"/>
                    <button name="action_activate" string="Activate" type="object" 
                            invisible="status == 'active'" class="btn-primary"/>
                    <button name="action_mark_completed" string="Mark Completed" type="object" 
                            invisible="status in ['completed', 'cancelled']" class="btn-success"/>
                    <button name="action_cancel" string="Cancel Class" type="object" 
                            invisible="status in ['completed', 'cancelled']" class="btn-danger"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,active,completed,cancelled"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Completed" bg_color="text-bg-success" invisible="status != 'completed' or not active"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-danger" invisible="status != 'cancelled' or not active"/>
                    <div class="oe_button_box" name="button_box">
                        <button type="action"
                                name="%(action_fs_student)d"
                                class="oe_stat_button"
                                icon="fa-users"
                                context="{'search_default_training_class_id': id, 'default_training_class_id': id}"
                                domain="[('training_class_id', '=', id)]"
                                invisible="not id">
                            <field name="student_count" widget="statinfo"/>
                            <span class="o_stat_text">Students</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., CPL 2024" readonly="status in ['completed', 'cancelled']"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Details">
                            <field name="code" placeholder="CPL24" readonly="status in ['completed',  'cancelled']"/>
                            <field name="class_type_id" required="1" widget="many2one_tag" options="{'color_field': 'color'}" readonly="status in ['completed', 'cancelled']"/>
                            <field name="color" widget="color_picker" column_invisible="1"/>
                        </group>
                        <group string="Schedule">
                            <field name="start_date" required="1" readonly="status in ['completed', 'cancelled']"/>
                            <field name="initial_end_date" readonly="status != 'draft'"/>
                            <field name="expected_end_date" decoration-warning="end_date_warning" readonly="status in ['completed', 'cancelled']"/>
                            <field name="actual_end_date" required="status in ['completed', 'cancelled']"/>
                            <field name="end_date_warning" invisible="1"/>
                        </group>
                    </group>
                    <div class="alert alert-warning mb-3" role="alert" invisible="not end_date_warning">
                        <i class="fa fa-warning me-2" title="Warning"></i>
                        <strong>Approaching End Date:</strong> The expected end date is in <field name="days_until_end" readonly="1" class="fw-bold"/> days.
                    </div>
                    <notebook>
                        <page string="Student Enrollments">
                            <field name="enrollment_ids" context="{'default_training_class_id': id}">
                                <list editable="bottom">
                                    <field name="student_id" 
                                           domain="['|', ('enrollment_status', '!=', 'active'), ('training_class_id.status', 'in', ['completed', 'cancelled', False])]"
                                           readonly="parent.status in ['completed', 'cancelled']"/>
                                    <field name="callsign" readonly="parent.status in ['completed', 'cancelled']"/>
                                    <field name="instructor_id" readonly="parent.status in ['completed', 'cancelled']"/>
                                    <field name="status" widget="selection" 
                                           decoration-success="status == 'active'"
                                           decoration-muted="status == 'graduated'"
                                           decoration-danger="status == 'dropped'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Progress &amp; Statistics">
                            <group>
                                <group>
                                    <field name="progress_percentage" widget="progressbar" readonly="status in ['completed', 'cancelled']"/>
                                    <field name="total_flight_hours_logged" widget="float_time" readonly="status in ['completed', 'cancelled']"/>
                                    <field name="average_hours_per_student" widget="float_time" readonly="status in ['completed', 'cancelled']"/>
                                </group>
                                <group>
                                    <field name="student_count" readonly="status in ['completed', 'cancelled']"/>
                                    <field name="active_student_count" readonly="status in ['completed', 'cancelled']"/>
                                    <field name="graduated_student_count" readonly="status in ['completed', 'cancelled']"/>
                                    <field name="dropped_student_count" readonly="status in ['completed', 'cancelled']"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="notes" readonly="status in ['completed', 'cancelled']"/>
                                <field name="admin_notes" readonly="status in ['completed', 'cancelled']"/>
                                <field name="regulation_notes" readonly="status in ['completed', 'cancelled']"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============== CALENDAR VIEW ============== -->
    <record id="view_fs_training_class_calendar" model="ir.ui.view">
        <field name="name">fs.training.class.calendar</field>
        <field name="model">fs.training.class</field>
        <field name="arch" type="xml">
            <calendar string="Training Schedule" date_start="start_date" date_stop="expected_end_date" color="color">
                <field name="name"/>
                <field name="class_type_id"/>
                <field name="status"/>
            </calendar>
        </field>
    </record>

    <!-- ============== GRAPH VIEW ============== -->
    <record id="view_fs_training_class_graph" model="ir.ui.view">
        <field name="name">fs.training.class.graph</field>
        <field name="model">fs.training.class</field>
        <field name="arch" type="xml">
            <graph string="Training Classes" type="bar" stacked="True">
                <field name="class_type_id" type="row"/>
                <field name="status" type="col"/>
                <field name="student_count" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- ============== PIVOT VIEW ============== -->
    <record id="view_fs_training_class_pivot" model="ir.ui.view">
        <field name="name">fs.training.class.pivot</field>
        <field name="model">fs.training.class</field>
        <field name="arch" type="xml">
            <pivot string="Training Classes">
                <field name="class_type_id" type="row"/>
                <field name="status" type="col"/>
                <field name="student_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- ============== SEARCH VIEW ============== -->
    <record id="view_fs_training_class_search" model="ir.ui.view">
        <field name="name">fs.training.class.search</field>
        <field name="model">fs.training.class</field>
        <field name="arch" type="xml">
            <search string="Search Training Classes">
                <field name="name" string="Class" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="class_type_id"/>
                <field name="status"/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Completed" name="completed" domain="[('status', '=', 'completed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('status', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group>
                    <filter string="Program" name="group_by_class_type" context="{'group_by': 'class_type_id'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Start Month" name="group_by_start_date" context="{'group_by': 'start_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>

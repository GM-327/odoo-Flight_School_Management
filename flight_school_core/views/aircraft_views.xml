<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Aircraft Views
    ==============
    Basic list, form, kanban, and action for fs.aircraft.
    -->

    <!-- ============== ACTION ============== -->
    <record id="action_fs_aircraft" model="ir.actions.act_window">
        <field name="name">Aircraft</field>
        <field name="res_model">fs.aircraft</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Aircraft
            </p>
            <p>
                Track training aircraft with registration, type, and maintenance status.
            </p>
        </field>
    </record>

    <!-- ============== LIST VIEW ============== -->
    <record id="view_fs_aircraft_list" model="ir.ui.view">
        <field name="name">fs.aircraft.list</field>
        <field name="model">fs.aircraft</field>
        <field name="arch" type="xml">
            <list string="Aircraft"
                  decoration-success="status == 'available'"
                  decoration-danger="status == 'grounded'"
                  decoration-warning="status == 'maintenance'">
                <field name="photo" widget="image" class="o_avatar" optional="hide"/>
                <field name="registration"/>
                <field name="aircraft_type_id"/>
                <field name="category_id"/>
                <field name="year_manufactured" optional="show"/>
                <field name="total_hours" optional="show" widget="float_time"/>
                <field name="status" widget="badge"/>
                <field name="home_base" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ============== FORM VIEW ============== -->
    <record id="view_fs_aircraft_form" model="ir.ui.view">
        <field name="name">fs.aircraft.form</field>
        <field name="model">fs.aircraft</field>
        <field name="arch" type="xml">
            <form string="Aircraft">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group string="Identification">
                            <field name="registration" required="1" placeholder="TS-ABC"/>
                            <field name="aircraft_type_id" required="1"/>
                            <field name="manufacturer" readonly="1"/>
                            <field name="model_name" readonly="1"/>
                            <field name="category_id" readonly="1"/>
                            <field name="serial_number"/>
                            <field name="year_manufactured" placeholder="YYYY"/>
                            <field name="status"/>
                        </group>
                        <group string="Details">
                            <field name="photo" widget="image" class="oe_avatar"/>
                            <field name="total_hours" widget="float_time"/>
                            <field name="home_base" placeholder="DTTJ" maxlength="4"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Notes about this aircraft..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============== SEARCH VIEW ============== -->
    <record id="view_fs_aircraft_search" model="ir.ui.view">
        <field name="name">fs.aircraft.search</field>
        <field name="model">fs.aircraft</field>
        <field name="arch" type="xml">
            <search string="Search Aircraft">
                <field name="registration" filter_domain="['|', ('registration', 'ilike', self), ('serial_number', 'ilike', self)]"/>
                <field name="aircraft_type_id"/>
                <field name="category_id"/>
                <field name="status"/>
                <filter string="Available" name="available" domain="[('status', '=', 'available')]"/>
                <filter string="Maintenance" name="maintenance" domain="[('status', '=', 'maintenance')]"/>
                <filter string="Grounded" name="grounded" domain="[('status', '=', 'grounded')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group>
                    <filter string="Aircraft Type" name="group_by_type" context="{'group_by': 'aircraft_type_id'}"/>
                    <filter string="Category" name="group_by_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Aircraft Category Views -->

    <record id="action_fs_aircraft_category" model="ir.actions.act_window">
        <field name="name">Aircraft Categories</field>
        <field name="res_model">fs.aircraft.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an Aircraft Category
            </p>
            <p>Define configurable categories for grouping aircraft types.</p>
        </field>
    </record>

    <record id="view_fs_aircraft_category_list" model="ir.ui.view">
        <field name="name">fs.aircraft.category.list</field>
        <field name="model">fs.aircraft.category</field>
        <field name="arch" type="xml">
            <list string="Aircraft Categories" default_order="sequence, name" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description" optional="hide"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_fs_aircraft_category_form" model="ir.ui.view">
        <field name="name">fs.aircraft.category.form</field>
        <field name="model">fs.aircraft.category</field>
        <field name="arch" type="xml">
            <form string="Aircraft Category">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description" nolabel="1" placeholder="Description..."/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

</odoo>

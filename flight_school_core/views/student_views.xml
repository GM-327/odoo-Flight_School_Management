<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Student Views
    =============
    Action, list, form, kanban, and search for fs.student.
    -->

    <!-- ============== LIST VIEW ============== -->
    <record id="view_fs_student_list" model="ir.ui.view">
        <field name="name">fs.student.list</field>
        <field name="model">fs.student</field>
        <field name="arch" type="xml">
            <list string="Students"
                  decoration-success="enrollment_status == 'active'"
                  decoration-danger="enrollment_status == 'dropped'"
                  decoration-muted="enrollment_status == 'graduated'">
                <field name="photo" widget="image" class="o_avatar" optional="hide"/>
                <field name="callsign"/>
                <field name="name"/>
                <field name="rank_id" optional="hide"/>
                <field name="training_class_id"/>
                <field name="default_instructor_id"/>
                <field name="enrollment_status" widget="badge"/>
                <field name="total_flight_hours" optional="show" widget="float_time"/>
                <field name="progress_percentage" widget="progressbar" optional="show"/>
            </list>
        </field>
    </record>

    <!-- ============== FORM VIEW ============== -->
    <record id="view_fs_student_form" model="ir.ui.view">
        <field name="name">fs.student.form</field>
        <field name="model">fs.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="photo" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image': 'photo'}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Full name"/>
                        </h1>
                        <h2 class="text-muted">
                            <field name="callsign" placeholder="Callsign"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Identity">
                            <field name="service_number"/>
                            <field name="rank_id" required="1"/>
                            <field name="primary_instructor_id"/>

                            <field name="enrollment_status" widget="badge"
                                   decoration-success="enrollment_status == 'active'"
                                   decoration-muted="enrollment_status == 'graduated'"
                                   decoration-danger="enrollment_status == 'dropped'"/>
                        </group>
                        <group string="Training">
                            <field name="training_class_id" readonly="1" force_save="1"/>
                            <field name="default_instructor_id" readonly="1" force_save="1"/>
                            <field name="class_type_id" readonly="1"/>
                            <field name="training_class_duration_display" readonly="1" decoration-warning="training_class_end_warning"/>
                            <field name="progress_percentage" widget="progressbar" readonly="1"/>
                            <field name="training_class_total_flight_hours" widget="float_time" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Personal &amp; Military">
                            <group>
                                <group>
                                    <field name="date_of_birth" required="1"/>
                                    <field name="age" readonly="1"/>
                                    <field name="gender" widget="selection_badge"/>
                                    <field name="nationality"/>
                                    <field name="national_id"/>
                                </group>
                                <group>
                                    <field name="security_clearance_expiry"/>
                                </group>
                            </group>
                        </page>
                        <page string="Training &amp; Progress">
                            <group>
                                <group string="Hours">
                                    <field name="total_flight_hours" widget="float_time"/>
                                    <field name="solo_hours" widget="float_time"/>
                                    <field name="dual_hours" widget="float_time"/>
                                    <field name="total_simulator_hours" widget="float_time"/>
                                    <field name="last_flight_date"/>
                                </group>
                                <group string="Progress">
                                    <field name="progress_percentage" widget="progressbar" readonly="1"/>
                                    <field name="class_name" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Medical">
                            <group>
                                <group>
                                    <field name="medical_class"/>
                                    <field name="medical_certificate_number"/>
                                    <field name="medical_issue_date"/>
                                    <field name="medical_expiry_date"/>
                                    <field name="medical_status" widget="badge" 
                                           decoration-muted="medical_status == 'unknown'" 
                                           decoration-success="medical_status == 'current'" 
                                           decoration-warning="medical_status == 'expiring_soon'" 
                                           decoration-danger="medical_status == 'expired'"
                                           readonly="1"/>
                                    <field name="medical_certificate_filename" invisible="1"/>
                                    <field name="medical_certificate" widget="image" filename="medical_certificate_filename" class="oe_avatar"/>
                                </group>
                                <group>
                                    <field name="medical_limitations" nolabel="1" placeholder="Medical limitations or notes..."/>
                                </group>
                            </group>
                        </page>

                        <page string="Contact">
                            <group>
                                <group string="Contact">
                                    <field name="email"/>
                                    <field name="mobile"/>
                                </group>
                                <group string="Emergency">
                                    <field name="emergency_contact_name"/>
                                    <field name="emergency_contact_phone"/>
                                    <field name="emergency_contact_relationship"/>
                                </group>
                            </group>
                            <group string="Address">
                                <field name="street"/>
                                <field name="street2"/>
                                <field name="city"/>
                                <field name="state"/>
                                <field name="zip"/>
                                <field name="country_id"/>
                            </group>
                        </page>
                        <page string="Enrollment History">
                            <field name="enrollment_ids">
                                <list editable="bottom" 
                                      decoration-success="status == 'active'"
                                      decoration-muted="status == 'graduated'"
                                      decoration-danger="status == 'dropped'">
                                    <field name="training_class_id"/>
                                    <field name="callsign"/>
                                    <field name="instructor_id"/>
                                    <field name="enrollment_date"/>
                                    <field name="status" widget="badge" 
                                           decoration-success="status == 'active'"
                                           decoration-muted="status == 'graduated'"
                                           decoration-danger="status == 'dropped'"/>
                                </list>
                                <form string="Enrollment">
                                    <group>
                                        <field name="training_class_id"/>
                                        <field name="callsign"/>
                                        <field name="instructor_id"/>
                                        <field name="enrollment_date"/>
                                        <field name="status"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="notes"/>
                                <field name="instructor_notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============== SEARCH VIEW ============== -->
    <record id="view_fs_student_search" model="ir.ui.view">
        <field name="name">fs.student.search</field>
        <field name="model">fs.student</field>
        <field name="arch" type="xml">
            <search string="Search Students">
                <field name="name" string="Student" filter_domain="['|', ('name', 'ilike', self), ('service_number', 'ilike', self)]"/>
                <field name="service_number"/>
                <field name="callsign"/>
                <field name="training_class_id"/>
                <field name="default_instructor_id"/>
                <filter string="Active Students" name="active_students" domain="[('enrollment_status', '=', 'active')]"/>
                <filter string="Graduated" name="graduated" domain="[('enrollment_status', '=', 'graduated')]"/>
                <filter string="Dropped/Cancelled" name="dropped" domain="[('enrollment_status', '=', 'dropped')]"/>
                <separator/>
                <filter string="Medical Expired" name="medical_expired" domain="[('medical_status', '=', 'expired')]"/>
                <filter string="Medical Expiring Soon" name="medical_expiring" domain="[('medical_status', '=', 'expiring_soon')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group>
                    <filter string="Training Class" name="group_by_class" context="{'group_by': 'training_class_id'}"/>
                    <filter string="Status" name="group_by_enrollment_status" context="{'group_by': 'enrollment_status'}"/>
                    <filter string="Instructor" name="group_by_instructor" context="{'group_by': 'default_instructor_id'}"/>
                    <filter string="Rank" name="group_by_rank" context="{'group_by': 'rank_id'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo> 

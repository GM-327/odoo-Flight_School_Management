<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Aircraft Type Views -->

    <record id="action_fs_aircraft_type" model="ir.actions.act_window">
        <field name="name">Aircraft Types</field>
        <field name="res_model">fs.aircraft.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an Aircraft Type
            </p>
            <p>Configure aircraft types with manufacturer, model, and category.</p>
        </field>
    </record>

    <record id="view_fs_aircraft_type_list" model="ir.ui.view">
        <field name="name">fs.aircraft.type.list</field>
        <field name="model">fs.aircraft.type</field>
        <field name="arch" type="xml">
            <list string="Aircraft Types" default_order="name">
                <field name="name"/>
                <field name="manufacturer"/>
                <field name="model_name"/>
                <field name="category_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_fs_aircraft_type_form" model="ir.ui.view">
        <field name="name">fs.aircraft.type.form</field>
        <field name="model">fs.aircraft.type</field>
        <field name="arch" type="xml">
            <form string="Aircraft Type">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="category_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="manufacturer"/>
                            <field name="model_name"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
    Training Class Type Views
    =========================
    List, Form, Kanban, and Search views for fs.class.type model.
    -->

    <!-- ============== ACTIONS ============== -->
    <record id="action_fs_class_type" model="ir.actions.act_window">
        <field name="name">Training Class Types</field>
        <field name="res_model">fs.class.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Training Class Type
            </p>
            <p>
                Training class types define the different training programs offered,
                such as PPL, CPL, IR, or military training courses.
            </p>
        </field>
    </record>

    <!-- ============== LIST VIEW ============== -->
    <record id="view_fs_class_type_list" model="ir.ui.view">
        <field name="name">fs.class.type.list</field>
        <field name="model">fs.class.type</field>
        <field name="arch" type="xml">
            <list string="Training Class Types" multi_edit="1" sample="1">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="estimated_duration" optional="show"/>
                <field name="estimated_duration_unit" optional="show"/>
                <field name="min_flight_hours_required" optional="hide" widget="float_time"/>
                <field name="regulation_reference" optional="show"/>
                <field name="is_military" optional="show"/>
                <field name="active" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ============== FORM VIEW ============== -->
    <record id="view_fs_class_type_form" model="ir.ui.view">
        <field name="name">fs.class.type.form</field>
        <field name="model">fs.class.type</field>
        <field name="arch" type="xml">
            <form string="Training Class Type">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., CPL - Commercial Pilot License"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="code" placeholder="e.g., CPL"/>
                            <field name="is_military"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Training Parameters">
                            <label for="estimated_duration"/>
                            <div class="o_row">
                                <field name="estimated_duration" class="oe_inline"/>
                                <field name="estimated_duration_unit" class="oe_inline"/>
                            </div>
                            <field name="min_flight_hours_required" widget="float_time"/>
                            <field name="regulation_reference" placeholder="e.g., JAR-FCL 1.155"/>
                        </group>
                    </group>
                    <group string="Prerequisites">
                        <field name="prerequisite_type_ids" widget="many2many_tags" 
                               options="{'color_field': 'color'}" nolabel="1" colspan="2"/>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" colspan="2" 
                               placeholder="Detailed description of this training program..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

</odoo>

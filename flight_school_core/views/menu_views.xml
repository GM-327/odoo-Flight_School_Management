<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
    Flight School Menu Structure
    ============================
    Main menus and sub-menus for the Flight School module.
    -->

    <!-- ============== MAIN MENU ============== -->
    <menuitem id="menu_flight_school_root"
              name="Flight School"
              sequence="100"
              web_icon="flight_school_core,static/description/icon.png"/>

    <!-- ============== MAIN OPERATIONS ============== -->
    <menuitem id="menu_flight_school_training_classes"
              name="Training Classes"
              parent="menu_flight_school_root"
              action="action_fs_training_class"
              sequence="10"
              groups="flight_school_core.group_flight_school_user"/>

    <menuitem id="menu_flight_school_pilots"
              name="Pilots"
              parent="menu_flight_school_root"
              sequence="15"
              groups="flight_school_core.group_flight_school_user"/>

    <menuitem id="menu_flight_school_students"
              name="Students"
              parent="menu_flight_school_pilots"
              action="action_fs_student"
              sequence="20"
              groups="flight_school_core.group_flight_school_user"/>

    <menuitem id="menu_flight_school_instructors"
              name="Instructors"
              parent="menu_flight_school_pilots"
              action="action_fs_instructor"
              sequence="30"
              groups="flight_school_core.group_flight_school_user"/>

    <menuitem id="menu_fs_pilot"
              name="Pilots"
              parent="menu_flight_school_pilots"
              action="action_fs_pilot"
              sequence="40"
              groups="flight_school_core.group_flight_school_user"/>

    <menuitem id="menu_flight_school_aircraft"
              name="Aircraft"
              parent="menu_flight_school_root"
              action="action_fs_aircraft"
              sequence="50"
              groups="flight_school_core.group_flight_school_user"/>

    <!-- ============== CONFIGURATION MENU ============== -->
    <!-- Only visible to Flight School Administrators -->
    <menuitem id="menu_flight_school_configuration"
              name="Configuration"
              parent="menu_flight_school_root"
              sequence="1000"
              groups="flight_school_core.group_flight_school_admin"/>

    <!-- Settings -->
    <menuitem id="menu_fs_settings"
              name="Settings"
              parent="menu_flight_school_configuration"
              action="action_fs_config_settings"
              sequence="5"/>

    <!-- Training Class Types -->
    <menuitem id="menu_fs_class_type"
              name="Training Class Types"
              parent="menu_flight_school_configuration"
              action="action_fs_class_type"
              sequence="10"/>



    <!-- Ranks -->
    <menuitem id="menu_fs_rank"
              name="Military Ranks"
              parent="menu_flight_school_configuration"
              action="action_fs_rank"
              sequence="30"/>

    <!-- Aircraft Categories -->
    <menuitem id="menu_fs_aircraft_category"
              name="Aircraft Categories"
              parent="menu_flight_school_configuration"
              action="action_fs_aircraft_category"
              sequence="40"/>

    <!-- Aircraft Types -->
    <menuitem id="menu_fs_aircraft_type"
              name="Aircraft Types"
              parent="menu_flight_school_configuration"
              action="action_fs_aircraft_type"
              sequence="50"/>

    <!-- Instructor Qualifications -->
    <menuitem id="menu_fs_instructor_qualification"
              name="Instructor Qualifications"
              parent="menu_flight_school_configuration"
              action="action_fs_instructor_qualification"
              sequence="60"/>

</odoo>

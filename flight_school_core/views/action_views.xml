<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Shared Actions
    =============
    Core window actions reused across Flight School forms.
    -->

    <record id="action_fs_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">fs.student</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Student
            </p>
            <p>
                Track student pilots, their training class, callsign, status, and medical currency.
            </p>
        </field>
    </record>

    <record id="action_fs_instructor" model="ir.actions.act_window">
        <field name="name">Instructors</field>
        <field name="res_model">fs.instructor</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Instructor
            </p>
            <p>
                Manage flight, simulator, and ground instructors with their ratings and workloads.
            </p>
        </field>
    </record>
</odoo>

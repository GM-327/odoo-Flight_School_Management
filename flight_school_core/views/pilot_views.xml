<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Pilot Views
    ===========
    Action, list, form views for fs.pilot.
    -->

    <!-- ============== ACTION ============== -->
    <record id="action_fs_pilot" model="ir.actions.act_window">
        <field name="name">Pilots</field>
        <field name="res_model">fs.pilot</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Pilot
            </p>
            <p>
                Track general pilots, their ranks, license information, and medical certificates.
            </p>
        </field>
    </record>

    <!-- ============== LIST VIEW ============== -->
    <record id="view_fs_pilot_list" model="ir.ui.view">
        <field name="name">fs.pilot.list</field>
        <field name="model">fs.pilot</field>
        <field name="arch" type="xml">
            <list string="Pilots">
                <field name="photo" widget="image" class="o_avatar" optional="hide"/>
                <field name="callsign"/>
                <field name="rank_id"/>
                <field name="name"/>
                <field name="medical_status" widget="badge" 
                       decoration-muted="medical_status == 'unknown'" 
                       decoration-success="medical_status == 'current'" 
                       decoration-warning="medical_status == 'expiring_soon'" 
                       decoration-danger="medical_status == 'expired'"
                       optional="show"/>
                <field name="qualification_assignment_ids" widget="many2many_tags" 
                       options="{'color_field': 'color'}"
                       optional="show" string="Qualifications"/>
            </list>
        </field>
    </record>

    <!-- ============== FORM VIEW ============== -->
    <record id="view_fs_pilot_form" model="ir.ui.view">
        <field name="name">fs.pilot.form</field>
        <field name="model">fs.pilot</field>
        <field name="arch" type="xml">
            <form string="Pilot">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="photo" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image': 'photo'}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Pilot name"/>
                        </h1>
                        <h2 class="text-muted">
                            <field name="callsign" placeholder="Callsign"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Profile">
                            <field name="rank_id"/>
                            <field name="service_number"/>
                        </group>
                        <group string="Contact">
                            <field name="email"/>
                            <field name="mobile" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Personal Info">
                            <group>
                                <group>
                                    <field name="date_of_birth"/>
                                    <field name="gender" widget="selection_badge"/>
                                    <field name="nationality"/>
                                </group>
                            </group>
                        </page>
                        <page string="License &amp; Qualifications">
                            <group>
                                <group string="License">
                                    <field name="license_number"/>
                                    <field name="license_type"/>
                                    <field name="license_issue_date"/>
                                </group>
                                <group string="License Document">
                                    <field name="license_front_filename" invisible="1"/>
                                    <field name="license_front_copy" widget="image" filename="license_front_filename" class="oe_avatar"/>
                                    <field name="license_back_filename" invisible="1"/>
                                    <field name="license_back_copy" widget="image" filename="license_back_filename" class="oe_avatar"/>
                                </group>
                            </group>
                            <group string="Qualifications">
                                <field name="qualification_assignment_ids" nolabel="1" colspan="2" context="{'default_pilot_id': id}">
                                    <list editable="bottom">
                                        <field name="qualification_id"/>
                                        <field name="expiry_date" widget="date"/>
                                        <field name="status" widget="badge" 
                                               decoration-muted="status == 'unknown'" 
                                               decoration-success="status == 'current'" 
                                               decoration-warning="status == 'expiring_soon'" 
                                               decoration-danger="status == 'expired'"
                                               readonly="1"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Medical">
                            <group>
                                <group>
                                    <field name="medical_class"/>
                                    <field name="medical_expiry_date"/>
                                    <field name="medical_status" widget="badge" 
                                           decoration-muted="medical_status == 'unknown'" 
                                           decoration-success="medical_status == 'current'" 
                                           decoration-warning="medical_status == 'expiring_soon'" 
                                           decoration-danger="medical_status == 'expired'"
                                           readonly="1"/>
                                </group>
                                <group string="Medical Document">
                                    <field name="medical_certificate_filename" invisible="1"/>
                                    <field name="medical_certificate" widget="image" filename="medical_certificate_filename" class="oe_avatar"/>
                                </group>
                            </group>
                        </page>
                        <page string="Contact &amp; Address">
                            <group>
                                <group>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="city"/>
                                    <field name="zip"/>
                                    <field name="country_id"/>
                                </group>
                                <group/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============== SEARCH VIEW ============== -->
    <record id="view_fs_pilot_search" model="ir.ui.view">
        <field name="name">fs.pilot.search</field>
        <field name="model">fs.pilot</field>
        <field name="arch" type="xml">
            <search string="Search Pilots">
                <field name="name" string="Pilot" filter_domain="['|', '|', ('name', 'ilike', self), ('callsign', 'ilike', self), ('service_number', 'ilike', self)]"/>
                <field name="callsign"/>
                <field name="rank_id"/>
                <separator/>
                <filter string="Medical Expired" name="medical_expired" domain="[('medical_status', '=', 'expired')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group>
                    <filter string="Rank" name="group_by_rank" context="{'group_by': 'rank_id'}"/>
                    <filter string="Nationality" name="group_by_nationality" context="{'group_by': 'nationality'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>

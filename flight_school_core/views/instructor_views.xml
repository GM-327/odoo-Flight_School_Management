<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Instructor Views
    ================
    Action, list, form views for fs.instructor.
    -->

    <!-- ============== LIST VIEW ============== -->
    <record id="view_fs_instructor_list" model="ir.ui.view">
        <field name="name">fs.instructor.list</field>
        <field name="model">fs.instructor</field>
        <field name="arch" type="xml">
            <list string="Instructors"
                  decoration-success="status == 'available'"
                  decoration-danger="status in ('medical_hold','deployed') or is_overloaded"
                  decoration-muted="status == 'retired'"
                  decoration-warning="status == 'on_leave'">
                <field name="photo" widget="image" class="o_avatar" optional="hide"/>
                <field name="callsign"/>
                <field name="rank_id"/>
                <field name="name"/>

                <field name="medical_status" widget="badge" 
                       decoration-muted="medical_status == 'unknown'" 
                       decoration-success="medical_status == 'current'" 
                       decoration-warning="medical_status == 'expiring_soon'" 
                       decoration-danger="medical_status == 'expired'"
                       optional="show"/>
                <field name="qualification_assignment_ids" widget="many2many_tags" 
                       options="{'color_field': 'color'}"
                       optional="show" string="Qualifications"/>
                <field name="student_count" optional="show"/>
                <field name="status" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- ============== FORM VIEW ============== -->
    <record id="view_fs_instructor_form" model="ir.ui.view">
        <field name="name">fs.instructor.form</field>
        <field name="model">fs.instructor</field>
        <field name="arch" type="xml">
            <form string="Instructor">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="photo" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image': 'photo'}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Instructor name"/>
                        </h1>
                        <h2 class="text-muted">
                            <field name="callsign" placeholder="Callsign"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Profile">
                            <field name="rank_id"/>
                            <field name="service_number"/>

                            <field name="status"/>
                        </group>
                        <group string="Contact">
                            <field name="email"/>
                            <field name="mobile" required="1"/>
                            <field name="nationality"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Personal Info">
                            <group>
                                <group>
                                    <field name="date_of_birth"/>
                                    <field name="gender" widget="selection_badge"/>
                                </group>
                            </group>
                        </page>
                        <page string="License &amp; Qualifications">
                            <group>
                                <group string="License">
                                    <field name="license_number"/>
                                    <field name="license_type"/>
                                    <field name="license_issue_date"/>
                                </group>
                                <group string="License Document">
                                    <field name="license_front_filename" invisible="1"/>
                                    <field name="license_front_copy" widget="image" filename="license_front_filename" class="oe_avatar"/>
                                    <field name="license_back_filename" invisible="1"/>
                                    <field name="license_back_copy" widget="image" filename="license_back_filename" class="oe_avatar"/>
                                </group>
                            </group>
                            <group string="Qualifications">
                                <field name="qualification_assignment_ids" nolabel="1" colspan="2" context="{'default_instructor_id': id}">
                                    <list editable="bottom">
                                        <field name="qualification_id"/>
                                        <field name="expiry_date"/>
                                        <field name="status" widget="badge" 
                                               decoration-muted="status == 'unknown'" 
                                               decoration-success="status == 'current'" 
                                               decoration-warning="status == 'expiring_soon'" 
                                               decoration-danger="status == 'expired'"
                                               readonly="1"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Medical">
                            <group>
                                <group>
                                    <field name="medical_class"/>
                                    <field name="medical_expiry_date"/>
                                    <field name="medical_status" widget="badge" 
                                           decoration-muted="medical_status == 'unknown'" 
                                           decoration-success="medical_status == 'current'" 
                                           decoration-warning="medical_status == 'expiring_soon'" 
                                           decoration-danger="medical_status == 'expired'"
                                           readonly="1"/>
                                </group>
                                <group string="Medical Document">
                                    <field name="medical_certificate_filename" invisible="1"/>
                                    <field name="medical_certificate" widget="image" filename="medical_certificate_filename" class="oe_avatar"/>
                                </group>    
                            </group>
                        </page>
                        <page string="Assignments">
                            <group col="3" string="Load Overview" name="assignment_overview" class="o_row">
                                <field name="student_count" readonly="1"/>
                                <field name="is_overloaded" readonly="1" widget="badge" decoration-warning="is_overloaded"/>
                            </group>
                            <group>
                                <field name="student_ids" nolabel="1" colspan="2" context="{'default_default_instructor_id': id}">
                                    <list>
                                        <field name="callsign"/>
                                        <field name="name"/>
                                        <field name="training_class_id"/>
                                        <field name="enrollment_status" widget="badge"
                                               decoration-success="enrollment_status == 'active'"
                                               decoration-muted="enrollment_status == 'graduated'"
                                               decoration-danger="enrollment_status == 'dropped'"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Workload &amp; Availability">
                            <group>
                                <group>
                                    <field name="total_hours" widget="float_time"/>
                                    <field name="hours_this_month" widget="float_time"/>
                                    <field name="hours_this_3months" widget="float_time"/>
                                </group>
                                <group/>
                            </group>
                        </page>
                        <page string="Contact &amp; Address">
                            <group>
                                <group>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="city"/>
                                    <field name="zip"/>
                                    <field name="country_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============== SEARCH VIEW ============== -->
    <record id="view_fs_instructor_search" model="ir.ui.view">
        <field name="name">fs.instructor.search</field>
        <field name="model">fs.instructor</field>
        <field name="arch" type="xml">
            <search string="Search Instructors">
                <field name="name" string="Instructor" filter_domain="['|', '|', ('name', 'ilike', self), ('callsign', 'ilike', self), ('service_number', 'ilike', self)]"/>
                <field name="callsign"/>
                <field name="rank_id"/>
                <field name="status"/>
                <filter string="Available" name="available" domain="[('status', '=', 'available')]"/>
                <filter string="Overloaded" name="overloaded" domain="[('is_overloaded', '=', True)]"/>
                <separator/>
                <filter string="Medical Expired" name="medical_expired" domain="[('medical_status', '=', 'expired')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Rank" name="group_by_rank" context="{'group_by': 'rank_id'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>

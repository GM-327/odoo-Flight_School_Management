<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Instructor Qualification Views -->

    <record id="action_fs_instructor_qualification" model="ir.actions.act_window">
        <field name="name">Instructor Qualifications</field>
        <field name="res_model">fs.instructor.qualification</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define Instructor Qualifications
            </p>
            <p>Create reusable qualifications that can be assigned to instructors.</p>
        </field>
    </record>

    <record id="view_fs_instructor_qualification_list" model="ir.ui.view">
        <field name="name">fs.instructor.qualification.list</field>
        <field name="model">fs.instructor.qualification</field>
        <field name="arch" type="xml">
            <list string="Instructor Qualifications" default_order="sequence, name" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="typical_validity_months"/>
                <field name="color" widget="color_picker" optional="hide"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_fs_instructor_qualification_form" model="ir.ui.view">
        <field name="name">fs.instructor.qualification.form</field>
        <field name="model">fs.instructor.qualification</field>
        <field name="arch" type="xml">
            <form string="Instructor Qualification">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code"/>
                            <field name="typical_validity_months" required="1"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description" nolabel="1" placeholder="Description..."/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
</odoo>
